[Unit]
Description=ServiceGuard - Monitoramento e autorestart de servicos criticos
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/sbin/serviceguard.sh

# Hardening basico
User=root
Group=root
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/serviceguard.log

[Install]
WantedBy=multi-user.target
